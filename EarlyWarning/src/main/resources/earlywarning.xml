<?xml version="1.0" encoding="ISO-8859-1" ?>
<earlywarning>
  <network>
    <port>4445</port>
  </network>
  <triggers>
    <create_trigger_on_errors>true</create_trigger_on_errors>
    <defaults>
      <priority>2</priority>
      <confirm_code>11</confirm_code>
      <repeat>true</repeat>
    </defaults>
  </triggers>
  <mail>
    <use_mail>false</use_mail>
    <smtp>
      <use_ssl>true</use_ssl>
      <host>smtp.gmail.com</host>
      <port>465</port>
      <username>username</username>
      <password>password</password>
      <from>username@mail.com</from>
    </smtp>
    <mailinglist>
      <contact>
        <email>conctact1@mail.com</email>
      </contact>
      <contact>
        <email>contact2@ipgp.com</email>
      </contact>
    </mailinglist>
  </mail>
  <contacts>
    <home>resources/www/</home>
    <port>6001</port>
    <lists>
      <list>
        <id>tech</id>
        <path>configuration/contacts/tech.json</path>
      </list>
      <list>
        <id>default</id>
        <path>configuration/contacts/default.json</path>
      </list>
    </lists>
  </contacts>
  <sounds>
    <sound>
      <id>welcome</id>
      <asterisk>accueil</asterisk>
      <charon>-1</charon>
    </sound>
    <sound>
      <id>login</id>
      <asterisk>demandecode</asterisk>
      <charon>-1</charon>
    </sound>
    <sound>
      <id>default</id>
      <asterisk>hello-world</asterisk>
      <charon>5</charon>
    </sound>
    <sound>
      <id>test_tone</id>
      <asterisk>ascending-2tone</asterisk>
      <charon>5</charon>
    </sound>
    <sound>
      <id>sismicite</id>
      <asterisk>sismicite</asterisk>
      <charon>3</charon>
    </sound>
    <sound>
      <id>rsam</id>
      <asterisk>rsam</asterisk>
      <charon>4</charon>
    </sound>
    <sound>
      <id>bye</id>
      <asterisk>merci</asterisk>
      <charon>-1</charon>
    </sound>
    <sound>
      <id>retry</id>
      <asterisk>incorrect</asterisk>
      <charon>-1</charon>
    </sound>
    <sound>
      <id>giveup</id>
      <asterisk>incorrect2</asterisk>
      <charon>-1</charon>
    </sound>
  </sounds>
  <gateway>
    <failover_retries>3</failover_retries>
    <active>asterisk</active>
    <failover_enabled>true</failover_enabled>
    <asterisk>
      <retries>3</retries>
      <ring_timeout>30000</ring_timeout>
      <agi_server_host>localhost</agi_server_host>
      <!-- These values can be edited in /etc/asterisk/manager.conf -->
      <settings>
        <ami_host>localhost</ami_host>
        <ami_port>5038</ami_port>
        <ami_user>user</ami_user>
        <ami_password>password</ami_password>
      </settings>
    </asterisk>
    <charon>
      <!-- The Charon I module's IP -->
      <!-- Since it's only a failover, default alert message, you don't need to configure the sounds for this gateway. -->
      <host>192.168.1.1</host>
      <port>23</port>
      <timeout>60000</timeout>
    </charon>
  </gateway>
  <sms>
    <use_sms>false</use_sms>
    <clickatell>
      <username>username</username>
      <password>password</password>
      <api_id>1111111</api_id>
    </clickatell>
    <duty_phone>262692000000</duty_phone>
  </sms>
  <failover>
    <is_failover>true</is_failover>
    <main>192.186.1.2</main>
    <heartbeat_port>6002</heartbeat_port>
  </failover>
</earlywarning>
